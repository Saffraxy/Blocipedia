<h1>Edit Wiki</h1>

 <div class="row">
   <div class="col-md-4">
     <p>Guidelines for wikis:</p>
     <ul>
       <li>Make sure the wiki is appropriate.</li>
       <li>Be kind to cats.</li>
       <li>Include something funny.</li>
     </ul>
   </div>
   <div class="col-md-8">
     <%= form_for @wiki do |f| %>
       <div class="form-group">
         <%= f.label :title %>
         <%= f.text_field :title, class: 'form-control', placeholder: "Enter wiki name" %>
       </div>
       <div class="form-group">
         <%= f.label :description %>
         <%= f.text_area :description, rows: 8, class: 'form-control', placeholder: "Enter wiki description" %>
       </div>
       <div class="form-group">
         <%= f.label :public, class: 'checkbox' do %>
           <%= f.check_box :public %> Public wiki
         <% end %>
       </div>
       <%= f.submit "Save", class: 'btn btn-success' %>
     <% end %>
   </div>
 </div>

   <div class="form-group">
     <h2>Add collaborators to the wiki <strong><%= @wiki.title %></strong></h2>
     <%= form_for (@wiki) do |f| %>
       <% @users.each do |user| %>
         <p><%= check_box_tag 'wiki[user_ids][]', user.id, @wiki.user_ids.include?(user.id) %>
         <%= label_tag 'wiki[user_ids][]', user.email %>
       <% end %>
       <p> <%= f.submit %> <p>
     <% end %>
    </div>
   </div>
